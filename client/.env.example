# Environment Variables - Frontend
# Copie este arquivo para .env.local e configure as variáveis

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME="IA Generativa para Conteúdo de Mídia Social"
NEXT_PUBLIC_APP_DESCRIPTION="Sistema de geração automatizada de conteúdo para Instagram"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# =============================================================================
# UPLOAD SETTINGS
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_EXTENSIONS="pdf,docx,txt,md"

# =============================================================================
# UI SETTINGS
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Para desenvolvimento local
NODE_ENV=development